{
  "name": "virtualized-chat",
  "version": "1.0.0",
  "scripts": {
    "server": "cd server && nodemon index.js",
    "client": "cd client && npm start",
    "start": "cd server && node index.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "concurrently": "^3.6.1"
  }
}
